    "version": "2.0.0",
    "tasks": [
        {
            "label": "bazel build video_processing_gpu",
            "type": "shell",
            "command": "bazel",
            "args": [
                "build",
                "-c",
                "opt",
                "--copt",
                "-DMESA_EGL_NO_X11_HEADERS",
                "--compilation_mode=dbg",
                "app:files_to_csv_gpu"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}